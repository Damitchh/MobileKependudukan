<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_list"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/id_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="dummy text"
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="@id/foto_list"
                app:layout_constraintStart_toEndOf="@id/foto_list"/>
            <TextView
                android:id="@+id/no_kk_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="dummy text"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/id_list"
                app:layout_constraintStart_toStartOf="@id/id_list"
                />
            <TextView
                android:id="@+id/nama_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="dummy text"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/no_kk_list"
                app:layout_constraintStart_toStartOf="@id/id_list"/>
            <TextView
                android:id="@+id/alamat_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="dummy text"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/nama_list"
                app:layout_constraintStart_toStartOf="@id/id_list"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>